<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= link_to post.title, post%>
  </p>

  <p>
    Posted <%= time_tag post.created_at, "data-local": "time-ago"%> by <%= post.user.email%>
  </p>

  <p>
    <strong><%= pluralize post.comments.count, "comment" %></strong>
  </p>
  
  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

</div>
